        <div class="h-100 p-5 bg-dark rounded-3 text-white secondary-content-album-container">
          <h2 class="d-flex justify-content-center">Featured Albums</h2>
          <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% for(let i=0;i<8;i++){ %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <img src="<%= albums[i].coverArt %>" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5><%= albums[i].album %></h5>
                    <p><%= albums[i].artist %></p>
                  </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>


